---

<Layout title={title}>
    <section class="col-lg-9">
        <ul class="section-body">
            <li><h5>{objectifs.title}</h5></li> 
            <li>
                <ul>
                    {objectifs.content.map((item) => <li>{item}</li> )}
                </ul>
            </li>
        </ul>
        <ul class="section-body">
            <li><h5>{experiences.title}</h5></li> 
            <li>
                {experiences.content.map((item) => 
                    <ul>
                        <li><h6>{item.carrier}</h6><span>{item.years}</span></li>
                        <li><span>{item.where}</span> <span>{item.post}</span> <span>{item.city}</span></li>
                        {item.info.map((i) => <li><strong>{i.name}</strong>: {i.text}</li> )}
                    </ul>
                )}

            </li>
        </ul>
        <ul class="section-body">
            <li><h5>{formations.title}</h5></li>
            <li>
                <table class="section-body table table-striped mb-0">            
                    <tbody>
                        {formations.content.map((item) => 
                        <tr>
                            <td>{item.year}</td>
                            <td>{item.name}</td>
                            <td>{item.cole}</td>
                            <td>{item.citadel}</td>
                        </tr>
                        )}
                    </tbody>
                </table>
            </li>
        </ul>
        <ul class="section-body">
            <li><h5>{languages.title}</h5></li>
            <li>
                <ul>
                    {languages.content.map((item) =>
                        <li><span><strong>{item.name}</strong></span>: <span>{item.speak}</span></li>
                    )}
                </ul>
            </li>
        </ul>
        <ul class="section-body">
            <li><h5>{hobbies.title}</h5></li>
            <li>
                <ul>
                    {hobbies.content.map((item) =>
                        <li><span><strong>{item.name}</strong></span>: <span>{item.text}</span></li>
                    )}
                </ul>
            </li>
        </ul>
    </section>
</Layout>

<style>
    section{
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    ul{
        border: 1px solid var(--colorW-60);
        list-style: none;
        padding: 0;
        margin: 0;
        border-radius: 0.3rem;
        padding-bottom: 0.3rem;
    }
    ul li{
        padding: 0rem 1rem;
    }
    ul li:first-child h5{
        background-color: var(--colorW-60);
        padding: 0.5rem 1rem;
        border-radius: 0.3rem 0.3rem 0 0;
        font-weight: 300;
        width: 100%;
    }
    ul li:first-child{
        padding: 0;
        padding-right: 0;
    }
    ul li:last-child{
        ul{
            list-style: circle;
            border: 0;
            li{
                margin-left: 1rem;
                padding: 0;
            }
        }
    }

    ul:nth-child(2){
        li:first-child{
            display: flex;
            justify-content: space-between;
            text-transform: uppercase;
            margin-bottom: 0;
            span:last-child{
                text-transform: capitalize;
                font-style: italic;
                color: var(--colorW-20);
                font-size: 0.9rem;
            }
        }
        li:last-child{
            padding: 0;
            ul{
                list-style: none;
                margin-bottom: 1rem;
                padding-right: 1rem;

                li:nth-child(2){
                    display: flex;
                    justify-content: space-between;
                    flex-wrap: wrap;
                    font-weight: bold;
                }
            }
            ul:last-child{
                margin-bottom: 0;
            }
        }
     
    }

    @media screen and (min-width: 991.98px) {
        section{
            padding: 0;
            padding-left: 1rem;  
        }
    }
</style>