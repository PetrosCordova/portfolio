}
const formations = {
    title: "Études et Formations",
    content:[
        {
            year: "2004-2006",
            name: "Développeur Web",
            cole: "IEPS",
            citadel: "Evere"
        },
        {
            year: "2004-2005",
            name: "Web Designer",
            cole: "EPFC2",
            citadel: "Ixelles"
        },
        {
            year: "2004-2005",
            name: "Multimédia",
            cole: "EPFC7",
            citadel: "Ixelles"
        },
        {
            year: "2002-2003",
            name: "DAO : 2D - 3D",
            cole: "EDPS",
            citadel: "Uccle"
        },
        {
            year: "2000-2001",
            name: "Équivalence",
            cole: "CFDB",
            citadel: "Bruxelles"
        },
        {
            year: "1984-1991",
            name: "CESS Général",
            cole: "CJFM",
            citadel: "Équateur"
        },
