---
import Layout from "../layouts/Layout.astro";
const title = "Curriculum Vitae";
const objectifs = {
    title: "Objectifs",
    content: [
        "Rester à jour avec les nouvelles technologies et les tendances émergentes dans le développement Web.",
        "Développer mes compétences en résolution de problèmes en travaillant sur des projets réels et en cherchant des solutions à des défis techniques.",
        "Travailler sur de projets en acquérant de l'expérience pratique à la fois en développement Front-End et Back-End pour devenir un développeur Full Stack compétant et polyvalent."
    ]
}
const experiences = {
    title:  "Expériences Professionnelles",
    content: [
        {
            carrier: "Développeur Web",
            where: "Auto-apprentissage",
            post: "Maîtrise des langages de programmation",
            city: "Bruxelles - BE",
            years: "2021 - 2024 (Web)",
            info: [
                {name: "HTML", text: "Comprendre la structure et la sémantique des éléments HTML."},
                {name: "CSS", text: "Savoir styliser les éléments HTML en utilisant les sélecteurs, les propriétés de mise en page et les techniques de mise e forme."},
                {name: "JavaScript", text: "Connaissances des concepts fondamentaux de la programmation JavaScript y compris les variables,les boucles, les fonctions et les objets. Cela inclut la manipulation du DOM côte client, ainsi que l'utilisation de Node.js pour le développement côté serveur."},
                {name: "Front-End", text: "Compréhension des frameworks et des bibliothèques (Astro, Vue, Bootstrap) pour la création d'interfaces et utilisateur interactives."},
                {name: "Back-End", text: "Utilisation des frameworks tels que Express and Node.js côté serveur."},
                {name: "Data Base", text: "Comprendre les DB relationnelles (SQL) et no relationnelles (NoSQL) plus la conception des schémas, l'écriture des requêtes SQL, ORMs avec MongoDB et MySQL."},
                {name: "Git & GitHub", text: "Utilisation du système de contrôle de versions Git pour la gestion diu code source, le suivi des version avec d'autres développeurs."},
                {name: "Astro", text: "Gagner du temps et mis en page, en pages réutilisables en rédigent les contenus des fichiers (.md et .json). \n Déployer des applications sur des serveurs en utilisant des services d'hébergement comme GitHub, Netlify"},

            ]
        },
        {
            carrier: "Back-End Développeur",
            where: "Euclides",
            post: "Charge du projet Bureau à Louer",
            city: "Bruxelles - BE",
            years: "2008 - 2010 (Web)",
            info: [
                {name: "Back-end", text: "Conception et déploiement d’un site web avec les technologies (Symfony, PHP, MySQL)."},
                {name: "Cyber Cafe", text: "Animation d’un parque informatique pour personnes âgés."},
                {name: "IT", text: "Installation, dépannage et entretiens des ordinateurs de bureau."},
            ]
        },
        {
            carrier: "Flash Développeur",
            where: "Ink Studio",
            post: "Charge du projet animé en Flash",
            city: "Saint-Gilles - BE",
            years: "2008 - 2008 (Web)",
            info: [
                {name: "Flash", text: "Conception et intégration des sites Web en Flash (Adobe)."},
                {name: "ActionScript", text: "Programmation Flash en langage native ActionScript."},
                {name: "Serveur", text: "Déploiement du site au server avec l’app File Zille."},
            ]
        }
