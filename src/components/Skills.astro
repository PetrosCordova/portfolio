---
const {title,stat} = Astro.props;
const skills = [
    {name:"langues", content: ["html","css","javaScript","php"]},
    {name:"libraries", content: ["github","markdown","json"]},
    {name:"frameworks", content: ["astro","vue","express","node","bootstrap"]},
    {name:"graphisme", content: ["photoshop","illustrator","gimp"]},
    {name:"data base", content: ["mongoDB","mysql"]}
]
---

<ul class={stat}>
    {skills.map((item) => 
        <li class="header"><h6>{item.name}</h6></li>
        <li class="body">
            <ul>
                {item.content.map((i) =>
                    <li><a class="nav-link disabled" aria-disabled="true" href="#">{i}</a></li>
                )}
            </ul>
        </li>
    )}
</ul>

<style>
    ul{
        padding: 0;
        margin: 0;
        list-style: none;
        .header{
            background-color: var(--colorW-40);
            padding: 0.3rem 0.5rem;
            border-radius: 0.3rem 0.3rem 0 0;
            border: 1px dotted var(--colorW-20);
            margin-top: 1rem;
            h6{
                margin-bottom: 0;
                text-transform: capitalize;
            }
        }
        .body{
            ul{
                border: 1px dotted var(--colorB-20);
                background-color: var(--colorW-80);
                border-radius: 0 0 0.3rem 0.3rem;
                text-transform: capitalize;
                li{
                    padding-left: 0.5rem;
                    padding-bottom: 0;
                }
                li:last-child{
                    padding-bottom: 0.5rem;
                }
            }
        }
    }
</style>